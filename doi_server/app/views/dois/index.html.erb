<h1>Doi Search Page</h1>

<%= form_tag(query_path, method: "get") do  %>

    <%= label_tag(:query,"DOI") %>
    <%= text_field_tag(:query) %>
    <%= submit_tag("Search") %>
   
<% end %>
<%= form_tag(query_path, method: "get") do  %>

    <%= label_tag(:name_query,"Name") %>
    <%= text_field_tag(:name_query) %>
    <%= submit_tag("Search") %>
   
<% end %>
<br>
<!-- xxxxxxxxxxxxxxxxxxxxxBy DOIxxxxxxxxxxxxxxxxxxxx -->
<% if @query_text && @doix %>
  <table border="1" >
    <thead>
      <tr>
        <th>URL</th>
        <th>TIME</th>
        <!-- <th>url</th> -->
        <th colspan="3"></th>
      </tr>
    </thead>
    <p><strong>DOI Name:</strong> <%= @doix.name %></p>
    <p><strong>Description:</strong> <%= @doix.desc %></p>
    <p><strong>DOI Id:</strong> <%= @query_text %></p>
      
      <% @doix.urls.reverse.each do |url| %>
        <% if !url.new_record? %>
          <tr>
            <td><%= url.site %></td>
            <td><%= @doix.created_at %></td>
          </tr>
        <% end %>
      <% end %>
  </table>
<% end %>
<!-- xxxxxxxxxxxxxxxxxxxxxxxxBy Namexxxxxxxxxxxxxxxxxxxxxxxxxxx -->
<% if @query_name  %>
  <table border="1" >
    <thead>
      <tr>
        <th>name</th>
        <th>desc</th>
        <th>Doi ID</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @dois_by_name.each do |doi| %>
        <tr>
          <td><%= doi.name %></td>
          <td><%= doi.desc %></td>
          <td><%= doi.url %></td>
          <td><%= link_to 'Show', doi %></td>
          <td><%= link_to 'Edit', edit_doi_path(doi) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
