<h1>Listing dois</h1>

<%= form_tag(query_path, method: "get") do  %>

    <%= label_tag(:query,"Search") %>
    <%= text_field_tag(:query) %>
    <%= submit_tag("Search") %>
   
<% end %>
<br>

<table>
  <thead>
    <tr>
      <th>name</th>
      <th>desc</th>
      <th>url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dois.each do |doi| %>
      <tr>
        <td><%= doi.name %></td>
        <td><%= doi.desc %></td>
        <td><%= doi.url %></td>
        <td><%= link_to 'Show', doi %></td>
        <td><%= link_to 'Edit', edit_doi_path(doi) %></td>
        <td><%= link_to 'Destroy', doi, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Doi', new_doi_path %>