<h1>Listing dois</h1>

<%= form_tag(query_path, method: "get") do  %>

    <%= label_tag(:query,"DOI") %>
    <%= text_field_tag(:query) %>
    <%= submit_tag("Search") %>
   
<% end %>
<%= form_tag(query_path, method: "get") do  %>

    <%= label_tag(:name_query,"Name") %>
    <%= text_field_tag(:name_query) %>
    <%= submit_tag("Search") %>
   
<% end %>
<br>

<table>
  <thead>
    <tr>
      <th>URL</th>
      <th>TIME</th>
      <!-- <th>url</th> -->
      <th colspan="3"></th>
    </tr>
  </thead>
  <% if @query_text %>
    <%= @doix.name %>
    <% @doix.urls.reverse.each do |url| %>
    <% if !url.new_record? %>
      <tr>
        <td><%= url.site %></td>
        <td><%= @doix.created_at %></td>
        <td><%= link_to 'Destroy', url, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <% end %>

  <% end %>
</table>

<br>

<%= link_to 'New Doi', new_doi_path %>