<!-- this table use to be in app/views/urls/index.html.erb -->
<table>
  <thead>
      <tr>
        <th>Course</th>
        <th>Comment</th>
        <th>Url</th>
        <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @doi.urls.each do |url| %>
    <% if !url.new_record? %>
      <tr>
        <td><%= url.site %></td>
        <td><%= url.doiIdentifier %></td>
        <td><%= url.doi_id %></td>
        <td><%= link_to 'Edit', edit_url_path(url) %></td>
        <td><%= link_to 'Destroy', url, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
