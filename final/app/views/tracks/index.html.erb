<body class="tinted-image">
<% @track.each do |track| %>
  <div>
    <h3 style="color:black"><%= track.track_name %></h3>
    <div>
      <% @image.each do |image| %>
        <% if image.track_id == track.image_id %>
          <%= link_to (image_tag root_url + "/images/" + image.image_fname, :class => "style_image", alt: image.image_fname), track %>
        <% end %>
      <% end %>
    </div> 
    <br> 
  </div>
<% end %>
</body>
