<style>
  
  div { color: white;}
  a { color: #3399FF;}
  a:visited { color: #B2B2CC;}
  
  .tinted-image {
    background: 
      linear-gradient(
        rgba(0, 0, 0, 0.45), 
        rgba(0, 0, 0, 0.45)
      ),
      url(<%= @imageBackground %>);
  }
</style>

<style>
.style_image {
  height: 400px; width: 1000px; overflow: hidden;
}

.tinted-image {
    background: 
      linear-gradient(
        rgba(0, 0, 0, 0.25), 
        rgba(0, 0, 0, 0.25)
      );
    }
</style>

