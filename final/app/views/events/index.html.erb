<h1>Listing events</h1>

<table>
  <thead>
    <tr>
      <th>Event desc</th>
      <th>Event model</th>
      <th>Event year</th>
      <th>Event displacement</th>
      <th>Event weight</th>
      <th>User</th>
      <th>Track</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.event_desc %></td>
        <td><%= event.event_model %></td>
        <td><%= event.event_year %></td>
        <td><%= event.event_displacement %></td>
        <td><%= event.event_weight %></td>
        <td><%= event.user %></td>
        <td><%= event.track %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

